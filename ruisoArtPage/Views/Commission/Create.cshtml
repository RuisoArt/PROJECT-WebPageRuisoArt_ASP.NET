@model Commission

@{
    ViewData["Title"] = "Create for Commission";
}
<div class="row text">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Create a new Commission</h1><br/>

        <div class="row">

            <div class="col">
                <div class="col-md-20 offset-md-0">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Tittle" class="control-label"></label>
                            <input asp-for="Tittle" class="form-control" />
                            <span asp-validation-for="Tittle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="description" class="control-label"></label>
                            <textarea asp-for="description" class="form-control" ></textarea>
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AproxPrice" class="control-label"></label>
                            <input asp-for="AproxPrice" class="form-control" />
                            <span asp-validation-for="AproxPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonName" class="control-label"></label>
                            <input asp-for="PersonName" class="form-control" />
                            <span asp-validation-for="PersonName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonLastName" class="control-label"></label>
                            <input asp-for="PersonLastName" class="form-control" />
                            <span asp-validation-for="PersonLastName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="ImageReference" class="control-label"></label>
                            <input asp-for="ImageReference" class="form-control" id="Photo" />
                            <span asp-validation-for="ImageReference" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-3">
                            <img src="" style="width: 350px" id="PhotoPreview"/>
                            <!--pendiente-->
                        </div>

                        <div class="form-group mt-2">
                            <input type="submit" class="btn btn-outline-success float-end" value="New Commission" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="col">
                <img src="http://localhost/images/pexels-cottonbro-studio-4709828.jpg" style="width: 370px"/>
                <a href="https://antoniogarciavillaran.es/">
                    <br/><br/><br/><img src="http://localhost/images/pdf.png" style="width: 70px"/>
                </a>
            </div>
            
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        var output = document.getElementById('PhotoPreview');
        $(document).ready(function () {
            output.src = $('#Photo').val();
        })
        $("#Photo").on("change", function () {
            output.src = $(this).val();
        })
    </script>
}