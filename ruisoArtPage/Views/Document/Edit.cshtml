@model Document

@{
    ViewData["Title"] = "Create" + Model.Name;
}
<div>
    <h1 class="text-center">Edit<br/>@Model.Name</h1>
    <div class="container text-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="col">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="col-md-8 offset-md-2">
                        
                        <div class="form-group">
                            <label asp-for="Link" class="control-label"></label>
                            <textarea asp-for="Link" class="form-control" ></textarea>
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                
                        <div class="form-group mt-2">
                            <input type="submit" class="btn btn-outline-success float-end" value="Update" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                        </div>
                    </div>
                </div>
                
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
        var output = document.getElementById('PhotoPreview');
        $(document).ready(function () {
            output.src = $('#Photo').val();
        })
        $("#Photo").on("change", function () {
            output.src = $(this).val();
        })
    </script>
}